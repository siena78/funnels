        jQuery('#squeeze_form4').submit();
  },1000);


  var mt = setTimeout(function(){
     if(!mem_rdirect)
        mem_rdirect = "accessapproved.php";
     
     if(mem_rdirect)
        mem_rdirect = mem_rdirect+"?email="+semail;
      
      top.location.href = mem_rdirect;
  },4000);

  return false;
